<html>
    <head>
        <title>Dashboard</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
        <!-- For DataTables -->
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.css">
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>
    </head>
    <body>
        <div class="container">
            <nav class="navbar navbar-expand-md bg-dark navbar-dark fixed-top">
                <a class="navbar-brand" href="#">DashBoard</a>
                <button class="navbar-toggler" type="button" data-toggle="collpase"
                    data-targert="#collapsibleNavbar">
                    <span class="navbar-toggle-icon"></span>
                </button>

                <div class="collpase navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/user">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/add">Add new</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <br/><br/><br/><br/>
            <h2>Add New User</h2>
            <form action="/adduser" method="POST">
                <div class="form-group">
                    <label for="rollno">RollNo:</label>
                    <input type="text" class="form-control" id="roll"
                    value="<%=id%>"
                    name="rollno" readonly>
                </div>
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name"
                    name="name" placeholder="Please enter name" required>
                </div>
                <div class="form-group">
                    <label for="class">Class:</label>
                    <input type="text" class="form-control" id="class"
                    placeholder="Please enter class"
                    name="class">
                </div>
                <button type="submit" class="btn btn-primary">Add User</button>
            </form>
        </div>
    </body>
</html>